-- Максимально простой Anti-Aim скрипт
-- Без сложных вызовов, только базовые функции

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- A. Базовая настройка
local config = {
    enabled = true,
    mode = "backward"
}

-- B. Простая функция Anti-Aim
local function simpleAA()
    if not config.enabled then return end
    if not player.Character then return end
    
    local char = player.Character
    local humanoid = char:FindFirstChild("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    
    -- 1. Проверяем необходимые части
    if not humanoid then return end
    if not root then return end
    
    -- 2. Отключаем авто-поворот
    humanoid.AutoRotate = false
    
    -- 3. Применяем простой Anti-Aim
    if config.mode == "backward" then
        humanoid.CameraOffset = Vector3.new(0, -0.3, 0)
        char:SetPrimaryPartCFrame(CFrame.new(root.Position, root.Position - root.CFrame.LookVector))
    end
end

-- C. Запуск скрипта
while true do
    local success, error = pcall(simpleAA)
    if not success then
        -- Просто игнорируем ошибки и продолжаем
    end
    wait(0.1)
end

print("Скрипт запущен")
