--[[
SENSATION.CC - Ultra Simple Version
No slider errors
--]]

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- A. Простая конфигурация
local Config = {
    BunnyHop = false,
    AntiAim = false,
    Yaw = 0,
    Spinbot = false,
    SpinSpeed = 3
}

-- B. Простое создание GUI
local mainGUI = nil

local function CreateSimpleGUI()
    if mainGUI then mainGUI:Destroy() end
    
    mainGUI = Instance.new("ScreenGui")
    mainGUI.Name = "SensationCC"
    mainGUI.Enabled = false
    mainGUI.Parent = CoreGui
    
    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0, 400, 0, 300)
    mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    mainFrame.BorderSizePixel = 1
    mainFrame.BorderColor3 = Color3.fromRGB(60, 60, 60)
    mainFrame.Parent = mainGUI
    
    -- Заголовок
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 30)
    title.Text = "SENSATION.CC - SIMPLE"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    title.Font = Enum.Font.GothamBold
    title.TextSize = 14
    title.Parent = mainFrame
    
    local content = Instance.new("Frame")
    content.Size = UDim2.new(1, -20, 1, -40)
    content.Position = UDim2.new(0, 10, 0, 35)
    content.BackgroundTransparency = 1
    content.Parent = mainFrame
    
    -- C. Простые кнопки вместо слайдеров
    local function CreateSimpleControl(text, yPos, configKey, values)
        local frame = Instance.new("Frame")
        frame.Size = UDim2.new(1, 0, 0, 25)
        frame.Position = UDim2.new(0, 0, 0, yPos)
        frame.BackgroundTransparency = 1
        frame.Parent = content
        
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(0, 150, 1, 0)
        label.Text = text
        label.TextColor3 = Color3.fromRGB(200, 200, 200)
        label.BackgroundTransparency = 1
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Font = Enum.Font.Gotham
        label.TextSize = 12
        label.Parent = frame
        
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(0, 80, 0, 20)
        button.Position = UDim2.new(1, -80, 0, 2)
        button.Text = "OFF"
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        button.Font = Enum.Font.Gotham
        button.TextSize = 11
        button.Parent = frame
        
        button.MouseButton1Click:Connect(function()
            if configKey == "BunnyHop" or configKey == "AntiAim" or configKey == "Spinbot" then
                Config[configKey] = not Config[configKey]
                button.Text = Config[configKey] and "ON" or "OFF"
                button.BackgroundColor3 = Config[configKey] and Color3.fromRGB(0, 150, 0) or Color3.fromRGB(80, 80, 80)
            else
                -- Для числовых значений циклическое переключение
                local currentIndex = 1
                for i, val in ipairs(values) do
                    if Config[configKey] == val then
                        currentIndex = i
                        break
                    end
                end
                
                local nextIndex = (currentIndex % #values) + 1
                Config[configKey] = values[nextIndex]
                button.Text = tostring(Config[configKey])
            end
        end)
        
        return frame
    end
    
    -- Создаем контролы
    CreateSimpleControl("BunnyHop", 0, "BunnyHop")
    CreateSimpleControl("Anti-Aim", 30, "AntiAim")
    CreateSimpleControl("Yaw Angle", 60, "Yaw", {-180, -90, 0, 90, 180})
    CreateSimpleControl("Spinbot", 90, "Spinbot")
    CreateSimpleControl("Spin Speed", 120, "SpinSpeed", {1, 3, 5, 10})
    
    -- Инструкция
    local info = Instance.new("TextLabel")
    info.Size = UDim2.new(1, 0, 0, 60)
    info.Position = UDim2.new(0, 0, 1, -60)
    info.Text = "Press DEL to toggle menu\nBunnyHop: Auto jump\nAnti-Aim: Fake angles\nSpinbot: Spin rotation"
    info.TextColor3 = Color3.fromRGB(150, 150, 150)
    info.BackgroundTransparency = 1
    info.TextXAlignment = Enum.TextXAlignment.Left
    info.Font = Enum.Font.Gotham
    info.TextSize = 10
    info.Parent = content
    
    return mainGUI
end

-- D. Система переключения
local function SetupToggle()
    UserInputService.InputBegan:Connect(function(input)
        if input.KeyCode == Enum.KeyCode.Delete then
            mainGUI.Enabled = not mainGUI.Enabled
        end
    end)
end

-- E. BunnyHop система
local function SimpleBunnyHop()
    RunService.Heartbeat:Connect(function()
        if not Config.BunnyHop then return end
        
        local player = Players.LocalPlayer
        if not player then return end
        
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            local humanoid = character.Humanoid
            if humanoid.MoveDirection.Magnitude > 0 then
                humanoid.Jump = true
            end
        end
    end)
end

-- F. Простой Anti-Aim
local function SimpleAntiAim()
    RunService.Heartbeat:Connect(function()
        if not Config.AntiAim then return end
        
        local player = Players.LocalPlayer
        if not player then return end
        
        local character = player.Character
        if not character then return end
        
        local humanoid = character:FindFirstChild("Humanoid")
        local root = character:FindFirstChild("HumanoidRootPart")
        
        if not humanoid or not root then return end
        
        humanoid.AutoRotate = false
        
        -- Spinbot
        if Config.Spinbot then
            local spinAngle = tick() * Config.SpinSpeed
            character:SetPrimaryPartCFrame(CFrame.new(root.Position) * CFrame.Angles(0, spinAngle, 0))
        else
            -- Простой Yaw
            character:SetPrimaryPartCFrame(CFrame.new(root.Position) * CFrame.Angles(0, math.rad(Config.Yaw), 0))
        end
    end)
end

-- G. Запуск
local function Start()
    CreateSimpleGUI()
    SetupToggle()
    SimpleBunnyHop()
    SimpleAntiAim()
    print("SENSATION.CC Simple Version Loaded!")
    print("Press DEL to open menu")
end

-- Запускаем
pcall(Start)
