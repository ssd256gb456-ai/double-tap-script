-- NEVERLOSE UI Script by Colin
local UIS = game:GetService("UserInputService")
local RS = game:GetService("RunService")

-- Основное окно
local GUI = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local TabButtons = Instance.new("Frame")
local ContentFrame = Instance.new("Frame")

GUI.Name = "NeverloseUI"
GUI.Parent = game.CoreGui
GUI.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

MainFrame.Name = "MainFrame"
MainFrame.Parent = GUI
MainFrame.Size = UDim2.new(0, 600, 0, 400)
MainFrame.Position = UDim2.new(0.5, -300, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
MainFrame.Active = true
MainFrame.Draggable = true

-- Система вкладок
local Tabs = {
    "Rage",
    "Legit", 
    "Visuals",
    "World",
    "Misc",
    "Skins",
    "Configs",
    "Scripts"
}

-- Функции для биндов
local BindSystem = {
    CurrentBinding = nil,
    Binds = {
        MenuToggle = Enum.KeyCode.Delete,
        AimbotToggle = Enum.KeyCode.MouseButton2,
        ESPToggle = Enum.KeyCode.F1
    }
}

-- Содержимое вкладок
local TabContents = {
    Rage = {
        {"Anti-Aim", {
            "Enable Anti-Aim",
            "Pitch",
            "Yaw",
            "Yaw Add",
            "Yaw Modifier", 
            "Modifier Degree"
        }},
        {"Fakelag", {
            "Enable Fakelag",
            "Limit",
            "Variance",
            "Lag Mode"
        }}
    },
    
    Visuals = {
        {"Players", {
            "Enable ESP",
            "Box Type",
            "Health Bar",
            "Weapon Icon",
            "Skeleton"
        }},
        {"World", {
            "Grenade ESP", 
            "Bomb ESP",
            "Weapon ESP"
        }}
    },
    
    Misc = {
        {"Movement", {
            "Bunny Hop",
            "Auto Strafe"
        }},
        {"Config", {
            "Save Config",
            "Load Config",
            "Reset Config"
        }}
    }
}

-- Создание UI элементов
for i, tabName in ipairs(Tabs) do
    local TabButton = Instance.new("TextButton")
    TabButton.Name = tabName
    TabButton.Parent = TabButtons
    TabButton.Size = UDim2.new(0, 80, 0, 30)
    TabButton.Position = UDim2.new(0, (i-1)*85, 0, 0)
    TabButton.BackgroundColor3 = Color3.fromRGB(40, 40, 45)
    TabButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    TabButton.Text = tabName
end

-- Функция переключения вкладок
local function SwitchTab(tabName)
    -- Очистка контента
    ContentFrame:ClearAllChildren()
    
    if TabContents[tabName] then
        for i, category in ipairs(TabContents[tabName]) do
            local CategoryLabel = Instance.new("TextLabel")
            CategoryLabel.Parent = ContentFrame
            CategoryLabel.Size = UDim2.new(0, 150, 0, 25)
            CategoryLabel.Position = UDim2.new(0, 10, 0, (i-1)*180)
            CategoryLabel.Text = category[1]
            CategoryLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            
            for j, option in ipairs(category[2]) do
                local OptionFrame = Instance.new("Frame")
                local Checkbox = Instance.new("TextButton")
                local OptionLabel = Instance.new("TextLabel")
                
                OptionFrame.Parent = ContentFrame
                OptionFrame.Size = UDim2.new(0, 200, 0, 25)
                OptionFrame.Position = UDim2.new(0, 20, 0, (i-1)*180 + j*30)
                OptionFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 40)
                
                Checkbox.Parent = OptionFrame
                Checkbox.Size = UDim2.new(0, 20, 0, 20)
                Checkbox.Position = UDim2.new(0, 5, 0, 2)
                Checkbox.BackgroundColor3 = Color3.fromRGB(60, 60, 65)
                Checkbox.Text = ""
                
                OptionLabel.Parent = OptionFrame
                OptionLabel.Size = UDim2.new(0, 150, 0, 20)
                OptionLabel.Position = UDim2.new(0, 30, 0, 2)
                OptionLabel.Text = option
                OptionLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
                OptionLabel.TextXAlignment = Enum.TextXAlignment.Left
            end
        end
    end
end

-- Система биндов
local function SetBind(key, functionName)
    BindSystem.Binds[functionName] = key
end

local function HandleInput(input)
    if input.KeyCode == BindSystem.Binds.MenuToggle then
        GUI.Enabled = not GUI.Enabled
    elseif input.KeyCode == BindSystem.Binds.AimbotToggle then
        -- Включение/выключение аимбота
    elseif input.KeyCode == BindSystem.Binds.ESPToggle then
        -- Включение/выключение ESP
    end
end

UIS.InputBegan:Connect(HandleInput)

-- Ингредиенты для использования:
-- 1. Executor с поддержкой UI
-- 2. Игра с доступом к CoreGui
-- 3. Включенные права на скрипты
-- 4. Клавиатура с клавишей Delete

-- Активация по умолчанию
SwitchTab("Rage")
GUI.Enabled = true
